---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Bannerbiografia from "../components/Banner-biografia.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header title={SITE_TITLE} />
        <main>
            <Bannerbiografia />
            <div>

            <section class="container mx-auto w-11/12 max-w-screen-xl lg:my-24 my-12">
                <div class="grid lg:grid-cols-3 grid-cols-1 lg:gap-0 gap-6">
                    <div class="lg:text-left text-center lg:col-span-2 lg:mr-16 mr-0">
                        <h2 class="lg:text-5xl text-4xl text-[#d9974d] font-semibold tracking-wide custom-text-2 ">Storytelling</h2>
                        <p class="text-[#203264] pt-6 text-lg tracking-wide custom-text-2 text-justify">
                            Conoce porque Hola Europa, es más que una agencia de viajes, es un sueño 
                            hecho realidad con la visión de compartirlo con el mundo.
                        </p>
                    </div>
                    <div class="my-auto">
                        <img src="/images/cecilia4.webp" class="h-[300px] w-full object-cover sm:h-[450px] mx-auto"/>
                    </div>
                </div>
            </section>

    
    <!-- Seccion Newletter -->
    <section class="relative bg-[url('/images/colosseum-in-rome-at-dusk.webp')] bg-cover bg-center bg-no-repeat h-[70vh]">
        <div class="absolute inset-0 bg-black/60 ltr:sm:bg-gradient-to-r rtl:sm:bg-gradient-to-l"></div>
        <div class="relative p-8 py-20 lg:py-28 ">
            <div class="mx-auto max-w-lg text-center">
                <h2 class="text-[#d9974d] text-5xl font-bold tracking-wide custom-text-3">Newsletter</h2>
                <p class="text-white mt-4 block custom-text-2">
                    Apúntate a nuestra newsletter y podrás conocer todas nuestras novedadese inspiración para tu viaje de ensueño.
                </p>
            </div>
            <div class="mx-auto mt-8 max-w-xl">
                <form action="#" class="flex">
                    <div class="flex-1">
                        <input type="email" class="w-full bg-transparent rounded-l-full border border-[#d9974d]  focus:ring-2 focus:ring-[#d9974d] outline-none text-white py-1 px-3 leading-8"/>
                    </div>
                    <button type="submit" class="group bg-transparent rounded-r-full border border-[#d9974d] text-white py-1 px-3 leading-8 focus:bg-[#d9974d]">
                        <span class="text-sm font-medium custom-text-2">SUSCRIBIRME </span>
                    </button>
                </form>
            </div>
            <div class="flex items-center justify-center pt-6">
                <input id="link-checkbox" type="checkbox" value="" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                <label for="link-checkbox" class="ml-2 text-sm font-medium text-white">He leído y acepto los <a href="#" class="text-[#d9974d] hover:underline">términos y condiciones</a>.</label>
            </div>
        </div>
    </section>



    <!-- Seccion instagram -->
    <section class=" my-20 w-[87%] mx-auto">
        
        <div class="grid lg:grid-cols-2 grid-cols-1">
            <div>
                <h1 class="text-xl text-[#203264] tracking-wide custom-text-3 text-center lg:text-start">
                    SÍGUENOS EN @HOLAEUROPA
                </h1>
                <p class="text-lg text-black tracking-wide custom-text-2 text-center lg:text-start">Experiencias de viajes para todo tipo</p>
            </div>
            <div class="lg:justify-self-end justify-self-center px-6 lg:pt-0 pt-3">
                <div class=" text-[#203264] flex gap-12 text-3xl">
                    <a href="https://www.facebook.com/" target="_blank"
                    ><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="https://www.instagram.com/" target="_blank"
                    ><i class="fa-brands fa-instagram"></i></a>
                </div>
            </div>
        </div>
        
        <div class=" grid lg:grid-cols-5 grid-cols-1 gap-6 pt-6">
            <a href="https://www.instagram.com/" target="_blank">
